record(int64in, "$(P)LstSz-I") {
    field(DESC, "file size")
    field(DTYP, "PSCUDPFast last file size")
    field(INP , "@$(NAME)")
    field(EGU , "MB")
    field(TSEL, "$(P)FItvl-I_.TIME")
    field(FLNK, "$(FLNK=)")
}
