record(int64in, "$(P)NooM-I") {
    field(DESC, "RX Out of memory events")
    field(DTYP, "PSCUDPFast #out of memory")
    field(INP , "@$(NAME)")
    field(TSEL, "$(P)FItvl-I_.TIME")
